<ol class="flex justify-center">
  <%= for name <- ~w(Alice Bob Carol) do %>
    <li>
      <.name_button name={name} current_name={@name} />
    </li>
  <% end %>
</ol>
<div>
  <span
    class="font-bold cursor-pointer"
    phx-click="increment_counter"
    phx-value-delta="10"
  >
    counter:
  </span>
  {@counter}
</div>
<div><span class="font-bold">name:</span> {@name}</div>
